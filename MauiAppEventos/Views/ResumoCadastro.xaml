<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.Views.ResumoCadastro"
             Title="ResumoCadastro"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Resumo do Evento" FontSize="24" TextColor="Turquoise" FontFamily="OrbitronMedium"/>

            <Label Text="{Binding Nome, StringFormat='Nome do evento: {0}'}" FontFamily="OrbitronRegular"/>
            <Label Text="{Binding Local, StringFormat='Local: {0}'}" FontFamily="OrbitronRegular"/>
            <Label Text="{Binding NumeroParticipantes, StringFormat='Número de Participantes: {0}'}" FontFamily="OrbitronRegular"/>
            <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por Participante: {0:C}'}" FontFamily="OrbitronRegular"/>
            <Label Text="{Binding DataInicio, StringFormat='Data de início: {0: dd/MM/yyyy}'}" FontFamily="OrbitronRegular"/>
            <Label Text="{Binding DataTermino, StringFormat='Data de término: {0: dd/MM/yyyy}'}" FontFamily="OrbitronRegular"/>
            <Label Text="{Binding DuracaoEmDias, StringFormat='Duração (dias): {0}'}" TextColor="Red" 
                   FontFamily="OrbitronRegular"/>
            <Label Text="{Binding CustoTotal, StringFormat='Custo total: {0:C}'}" TextColor="Green"
                   FontFamily="OrbitronRegular"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>